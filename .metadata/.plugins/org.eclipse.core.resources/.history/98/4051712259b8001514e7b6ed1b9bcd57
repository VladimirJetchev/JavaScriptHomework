<body>	
<p id ="result_notice">The most common element in the array [3, 'a','B','a', 2, 2, ,'a', 2, 2, 2, 4, 9, ] is: 
</p>
<p id="result">test</p>

<script> 

var arr= [3, 'a','a','a', 2, 3, ,'a', 3, 'a', 2, 4, 9, ]; 

var i;
var j;
var counter = 0; 
var element;


for ( i=0 ; i<arr.length; i++ ){
	var counterInloop=1;
	for (j= i+1 ; j <arr.length-1; j++){
		if ( arr[i] == arr[j]){
			counterInloop++; 
			var elementInloop = arr[i];
		}
	}if ( counterInloop > counter ){
		element = elementInloop
		counter = counterInloop
	}
}


// id ="result_notice" 
var result= document.getElementById("result");
result.innerHTML=element+" ("+counter +" times)";

</script>
</html>